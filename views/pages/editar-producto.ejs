<style>
    .mb-3 { max-width: 10cm; margin-top: 1cm; }
    .center { text-align: center; margin-top: 3cm;}
</style>
<div class="container" id="formulario">
    <h1 class="center">MODIFICAR PRODUCTO</h1>
	<div class="form-check">
        <div class="mb-3">
			<label class="form-label">Nombre</label>
			<input style="text-transform:capitalize" type="text" class="form-control" v-model="formulario.nombre" name="nombre" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div>

        <div class="mb-3">
			<label class="form-label">Descripcion</label>
			<input type="text" class="form-control" v-model="formulario.descripcion" name="descripcion" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div> 

        <div class="mb-3">
			<label class="form-label">Precio Compra</label>
			<input type="number" class="form-control" v-model="formulario.precioCompra" name="precioCompra" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div> 

		<div class="mb-3">
			<label class="form-label">Precio Venta</label>
			<input type="number" class="form-control" v-model="formulario.precioVenta" name="precioVenta" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div> 
        
		<div class="mb-3">
			<label class="form-label">Fecha</label>
			<input type="date" class="form-control" v-model="formulario.fecha" name="fecha" aria-describedby="help" required>
		</div> 
	
        <div class="mb-3">
            <label class="form-label">Estatus</label>
            <select name="activo" v-model="formulario.activo" class="form-select" required>
                <option selected disabled="">Seleccione una opción</option>
                <option value="1">Activo</option>
                <option value="0">Inactivo</option>
            </select>
        </div>
        
        <div class="mb-3">
			<label class="form-label">Cantidad</label>
			<input type="number" class="form-control" v-model="formulario.cantidad" name="cantidad" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div> 

        <div class="col-6 col-sm-3">
            <button 
                class="btn btn-primary" 
                v-on:click= "actualizarProducto('')"
            >Editar Producto</button>
            <button 
                class="btn btn-danger" 
                v-on:click= "eliminarProducto('')"
            >Eliminar Producto</button>
        </div>

	</div>
</div>
<script type="text/javascript">
	
	var data_formulario = {
		nombre: "",
		descripcion: "",
		precioCompra: "",
		precioVenta: "",
		fecha: "",
		activo: "Seleccione una opción",
        cantidad: ""
	};
</script>
<script src="/js/formularioProducto.js" type="text/javascript" charset="utf-8"></script>