<style>
    .mb-3 { max-width: 10cm; margin-top: 1cm; }
    .center { text-align: center; margin-top: 3cm;}
</style>
<div class="container" id="formulario">
    <h1 class="center">NUEVO PRODUCTO</h1>
	<div class="form-check">
        <div class="mb-3">
			<label class="form-label">Id Producto</label>
			<input style="text-transform:uppercase" type="text" class="form-control" v-model="formulario.nombre" name="nombre" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div>
         
        <div class="mb-3">
			<label class="form-label">SKU:</label>
			<input type="number" class="form-control" v-model="formulario.sku" name="sku" aria-describedby="help" required>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div> 
        
		<div class="mb-3">
			<label class="form-label">Disponibilidad:</label>
			<select name="disponibilidad" v-model="formulario.disponibilidad" class="form-select" required>
                <option selected disabled="disabled">Selecciona una opción</option>
                <option value="SÍ">SÍ</option>
                <option value="NO">NO</option>
			</select>
            <small id="help" class="form-text text-muted">ESTE CAMPO ES OBLIGATORIO</small>
		</div>
	
		<div class="mb-3">
			<label class="form-label">Cantidad:</label>
			<input type="number" class="form-control" v-model="formulario.cantidad" name="cantidad">
		</div> 

        <div class="mb-3">
			<label class="form-label">Deporte:</label>
			<input style="text-transform:uppercase" type="text" class="form-control" v-model="formulario.deporte" name="deporte">
		</div>
        
        <div class="mb-2">
			<label class="form-label">Precio:</label>
			<div class="row g-2 align-items-justify">
                <div class="col-auto">
                    <label class="form-label">$</label>
                </div>
                <div class="col-auto">
                    <input type="number" class="form-control" v-model="formulario.precio" name="precio">
                </div>
            </div> 
		</div>

        <div class="mb-3">
			<label class="form-label">Marca:</label>
			<input style="text-transform:uppercase" type="text" class="form-control" v-model="formulario.marca" name="marca">
		</div> 

        <div class="mb-3">
			<label class="form-label">Modelo:</label>
			<input style="text-transform:uppercase" type="text" class="form-control" v-model="formulario.modelo" name="modelo">
		</div> 

        <div class="mb-3">
            <button 
                class="btn btn-primary" 
                v-on:click= "sendData()"
            >Enviar</button>
        </div>

	</div>
</div>
<script type="text/javascript">
	
	var data_formulario = {
		nombre: "",
		sku: "",
		disponibilidad: "Selecciona una opción",
		cantidad: "",
		deporte: "",
		precio: "",
		marca: "",
		modelo: "",
	};
</script>
